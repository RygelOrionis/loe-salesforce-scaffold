{
  "name": "loe-scaffold",
  "description": "LWC OSS Electron scaffold app with ipc communication",
  "main": "scripts/main.js",
  "version": "0.0.1",
  "author": "Richard Cook",
  "bugs": "https://github.com/rrcook/loe-scaffold/issues",
  "dependencies": {
    "@salesforce-ux/design-system": "^2.15.9",
    "compression": "^1.7.4",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "lightning-base-components": "^1.13.1-alpha"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.59",
    "@electron-forge/maker-deb": "^6.0.0-beta.59",
    "@electron-forge/maker-rpm": "^6.0.0-beta.59",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.59",
    "@electron-forge/maker-zip": "^6.0.0-beta.59",
    "electron": "^13.2.1",
    "eslint": "^7.32.0",
    "eslint-plugin-inclusive-language": "^2.1.1",
    "husky": "^7.0.1",
    "lwc-services": "^3.1.2",
    "prettier": "^2.3.2"
  },
  "engines": {
    "node": ">=10.13.0",
    "npm": ">=6.4.1",
    "yarn": ">=1.9.4"
  },
  "homepage": "https://github.com/rrcook/loe-scaffold",
  "keywords": [
    "lwc"
  ],
  "license": "MIT",
  "repository": "Richard Cook/loe-scaffold",
  "scripts": {
    "build": "lwc-services build -m production",
    "build:development": "lwc-services build",
    "lint": "eslint ./src/**/*.js",
    "postinstall": "husky install",
    "precommit": "npm run prettier:verify && [ $? -eq 0 ] && npm run lint",
    "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
    "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
    "test:unit": "lwc-services test:unit",
    "test:unit:coverage": "lwc-services test:unit --coverage",
    "test:unit:debug": "lwc-services test:unit --debug",
    "test:unit:watch": "lwc-services test:unit --watch",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make-mac": "electron-forge make --platform darwin",
    "publish": "electron-forge publish"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "loe_scaffold"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
